<h1>Listing news_updates</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_updates.each do |news_update| %>
    <%= news_update.title %> <br/>
    <%= news_update.content %> <br/>
      <tr>
        <td><%= link_to 'Show', news_update %></td>
        <td><%= link_to 'Edit', edit_news_update_path(news_update) %></td>
        <td><%= link_to 'Destroy', news_update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News update', new_news_update_path %>
